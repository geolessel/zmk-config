#define BASE 0
#define NUMPAD 1

#define LOPT LALT
#define ROPT RALT

/ {
  keymap {
    compatible = "zmk,keymap";
    base_layer {
      bindings = <
// ┏━━━━━━━┯━━━━━━━┯━━━━━━━┯━━━━━━━┯━━━━━━━┯━━━━━━━┓     ┏━━━━━━━┯━━━━━━━┯━━━━━━━┯━━━━━━━┯━━━━━━━┯━━━━━━━┓
// ┃  TAB  │   Q   │   W   │   E   │   R   │   T   ┃     ┃   Y   │   U   │   I   │   O   │   P   │  BKSP ┃
// ┠───────┼───────┼───────┼───────┼───────┼───────┨     ┠───────┼───────┼───────┼───────┼───────┼───────┨
// ┃ CTRL  │   A   │   S   │   D   │   F   │   G   ┃     ┃   H   │   J   │   K   │   L   │   ;   │  RET  ┃
// ┠───────┼───────┼───────┼───────┼───────┼───────┨     ┠───────┼───────┼───────┼───────┼───────┼───────┨
// ┃ SHFT  │   Z   │   X   │   C   │   V   │   B   ┃     ┃   N   │   M   │   ,   │  .    │   /   │  SHFT ┃
// ┗━━━━━━━┷━━━━━━━┷━━━━━━━╅───────┼───────┼───────┨     ┠───────┼───────┼───────╆━━━━━━━┷━━━━━━━┷━━━━━━━┛
//                         ┃  OPT  │  CMD  │ NUMPD ┃     ┃ NUMPD │  SPC  │  OPT  ┃
//                         ┗━━━━━━━┷━━━━━━━┷━━━━━━━┛     ┗━━━━━━━┷━━━━━━━┷━━━━━━━┛
    &kp TAB    &kp Q  &kp W  &kp E    &kp R    &kp T      &kp Y    &kp U      &kp I      &kp O    &kp P     &kp BSPC
    &kp LCTRL  &kp A  &kp S  &kp D    &kp F    &kp G      &kp H    &kp J      &kp K      &kp L    &kp SEMI  &kp RET
    &kp LSHFT  &kp Z  &kp X  &kp C    &kp V    &kp B      &kp N    &kp M      &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
                             &kp LOPT &kp LCMD &mo NUMPAD &mo 1    &kp SPACE  &kp ROPT
      >;
    };

    numpad_layer {
      bindings = <
// ┏━━━━━━━┯━━━━━━━┯━━━━━━━┯━━━━━━━┯━━━━━━━┯━━━━━━━┓     ┏━━━━━━━┯━━━━━━━┯━━━━━━━┯━━━━━━━┯━━━━━━━┯━━━━━━━┓
// ┃       │       │       │       │       │       ┃     ┃  / ?  │   7   │   8   │   9   │  - _  │       ┃
// ┠───────┼───────┼───────┼───────┼───────┼───────┨     ┠───────┼───────┼───────┼───────┼───────┼───────┨
// ┃   {   │   }   │   (   │   )   │   [   │   ]   ┃     ┃   *   │   4   │   5   │   6   │  = +  │       ┃
// ┠───────┼───────┼───────┼───────┼───────┼───────┨     ┠───────┼───────┼───────┼───────┼───────┼───────┨
// ┃       │       │       │       │       │       ┃     ┃       │   1   │   2   │   3   │       │       ┃
// ┗━━━━━━━┷━━━━━━━┷━━━━━━━╅───────┼───────┼───────┨     ┠───────┼───────┼───────╆━━━━━━━┷━━━━━━━┷━━━━━━━┛
//                         ┃       │       │       ┃     ┃       │   0   │   .   ┃
//                         ┗━━━━━━━┷━━━━━━━┷━━━━━━━┛     ┗━━━━━━━┷━━━━━━━┷━━━━━━━┛
    &trans   &trans   &trans   &trans   &trans   &trans   &kp SLASH  &kp N7  &kp N8  &kp N9  &kp MINUS &trans
    &kp LBRC &kp RBRC &kp RBKT &kp LPAR &kp RPAR &kp LBKT &kp STAR  &kp N4  &kp N5  &kp N6  &kp EQUAL  &trans
    &trans   &trans   &trans   &trans   &trans   &trans   &trans  &kp N1  &kp N2  &kp N3  &trans  &trans
                               &trans   &trans   &trans   &trans  &kp N0  &kp DOT
      >;
    };
};

