/ {
  combos {
    compatible = "zmk,combos";
    combo_gh_esc {
      timeout-ms = <50>;
      key-positions = <16 19>;
      bindings = <&kp ESC>;
    };

    combo_gh_caps_word {
      timeout-ms = <50>;
      key-positions = <17 18>;
      bindings = <&caps_word>;
    };
  };

////// BEHAVIORS ///////////////////////////////////////////////////////////////////////////////////////
/ {
  behaviors {
    tdj: tap_dance_j {
      compatible = "zmk,behavior-tap-dance";
      label = "TAP_DANCE_J";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&mt RSHFT J>, <&kp J>;
    };
  };
};

